<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Domain\Entity\User" table="users">
        <id name="id" type="integer">
            <generator strategy="IDENTITY"/>
        </id>
        <field name="name" type="string" />
        <field name="password" type="string" />

        <embedded name="email" class="App\Domain\ValueObject\Email" use-column-prefix="false" />

        <one-to-many field="contacts" target-entity="App\Domain\Entity\Contact" mapped-by="user">
            <cascade><cascade-all/></cascade>
        </one-to-many>
    </entity>
</doctrine-mapping>